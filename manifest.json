{
  "manifest_version": 2,

  "name": "resizemy.photos",
  "description": "This extension allows to crop images from websites",
  "version": "1.1",
  "homepage_url": "http://resizemy.photos/",
  "author": "Guy Peri",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "resizemy.photos"
  },
  "icons" : {
    "16" : "icon.png"
  },
  "background" : { "scripts": ["background.js"] },
  "permissions" : [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
   ]
}