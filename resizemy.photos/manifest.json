{
  "manifest_version": 2,
  "name": "resizemy.photos",
  "description": "This extension allows to crop images from websites",
  "version": "1.2",
  "homepage_url": "http://resizemy.photos/",
  "author": "Guy Peri",
  "browser_action": {
    "default_title": "resizemy.photos",
    "default_icon": {
      "19": "icons/icon-active.png"
    }
  },
  "icons" : {
    "16" : "icons/16x16.png",
    "24" : "icons/24x24.png",
    "32" : "icons/32x32.png",
    "48" : "icons/48x48.png",
    "64" : "icons/64x64.png",
    "128" : "icons/128x128.png"
  },
  "content_scripts": [ 
    { 
      "matches": ["<all_urls>"], 
      "css": ["css/hover.min.css"], 
      "js": ["js/hover.min.js"] 
    } 
  ],
  "background" : { "scripts": ["js/background.min.js"] },
  "web_accessible_resources": [
    "/icons/button-icon.png",
    "index.html",
    "loading.gif",
    "js/main.min.js",
    "css/general.min.css"
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "permissions" : [
    "activeTab",
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
   ]
}